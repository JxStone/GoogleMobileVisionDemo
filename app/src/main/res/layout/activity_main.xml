<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/bServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server"
        android:layout_below="@+id/bClient"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/bImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        android:layout_below="@+id/bServer"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/bVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Anonymization"
        android:layout_below="@+id/bImage"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/bFaceTracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Face Tracker"
        android:layout_below="@+id/bVideo"
        android:layout_marginTop="20dp"/>



</RelativeLayout>